<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好"
            android:textStyle="bold"
            android:paddingTop="5dp"

            android:id="@+id/three_stuff_item_title_first"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好"
            android:paddingTop="5dp"
            android:textStyle="bold"

            android:id="@+id/three_stuff_item_title_second"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好"
            android:paddingTop="5dp"
            android:textStyle="bold"

            android:id="@+id/three_stuff_item_title_third"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好"
            android:paddingTop="5dp"
            android:textStyle="bold"

            android:id="@+id/three_stuff_item_title_fourth"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <View
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/three_stuff_item_v_line"
            android:background="#00ff00"/>
        <View
            android:layout_width="match_parent"
            android:id="@+id/three_stuff_circle"
            android:background="@mipmap/tiko_item_circle_0003"
            android:layout_height="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:paddingBottom="8dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/three_stuff_listView"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/three_stuff_item_h_line"

            android:background="#00ff00" />
</LinearLayout>
</LinearLayout>