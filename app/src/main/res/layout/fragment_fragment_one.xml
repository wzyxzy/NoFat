<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.wzy.nofat.fragments.FragmentOne">
    
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView

            android:id="@+id/one_denglu"
            android:padding="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textSize="15dp"
            />
        <RadioGroup
            android:id="@+id/one_radiogroup"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/one_rb_biechipang"
                style="@style/One_radiogroup"
                android:background="@drawable/one_radiobutton"
                android:text="别吃胖"
                />
            <RadioButton
                android:id="@+id/one_rb_jianzhiqu"
                android:background="@drawable/one_radiobutton"
                style="@style/One_radiogroup"
                android:text="减脂去"
                />
        </RadioGroup>
        <LinearLayout
            android:paddingLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
            android:id="@+id/one_qingming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="清明第"
            />
            <TextView
                android:id="@+id/one_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"

                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="天"
                />

        </LinearLayout>

    </LinearLayout>
    <FrameLayout
        android:id="@+id/one_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></FrameLayout>

</LinearLayout>
